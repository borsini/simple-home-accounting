{
  "name": "simplehomeaccounting",
  "version": "0.5.7",
  "license": "MIT",
  "main": "main.js",
  "author": "Benlenem",
  "description": "Simple web interface for plain text accounting. Compatible with ledger file format.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Benlenem/simple-home-accounting.git"
  },
  "build": {
    "appId": "com.benlenem.simplehomeaccounting",
    "productName": "Simple Home Accounting",
    "copyright": "Copyright Â© 2018 Benlenem",
    "win": {
      "target": "nsis"
    },
    "mac": {
      "category": "public.app-category.finance"
    },
    "files": [
      "main.js",
      "build"
    ]
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "commitmsg": "validate-commit-msg",
    "electron": "electron .",
    "electron-build": "ng build --prod && electron .",
    "pack": "electron-builder --dir",
    "build-win": "electron-builder build --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "private": true,
  "dependencies": {
    "@angular-redux/store": "9.0.0",
    "@angular/animations": "6.1.0",
    "@angular/cdk": "6.1.0",
    "@angular/common": "6.1.0",
    "@angular/compiler": "6.1.0",
    "@angular/core": "6.1.0",
    "@angular/forms": "6.1.0",
    "@angular/http": "6.1.0",
    "@angular/material": "6.1.0",
    "@angular/material-moment-adapter": "6.1.0",
    "@angular/platform-browser": "6.1.0",
    "@angular/platform-browser-dynamic": "6.1.0",
    "@angular/platform-server": "6.1.0",
    "@angular/router": "6.1.0",
    "@types/decimal.js": "7.4.0",
    "@types/file-saver": "1.3.0",
    "@types/pegjs": "^0.10.0",
    "@types/uuid": "^3.4.4",
    "core-js": "^2.5.1",
    "decimal.js": "^9.0.1",
    "pegjs": "^0.10.0",
    "redux": "4.0.0",
    "rxjs": "6.0.0",
    "tslint-immutable": "^4.5.1",
    "uuid": "3.3.2",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.0",
    "@angular/cli": "6.0.0",
    "@angular/compiler-cli": "6.1.0",
    "@angular/language-service": "^5.2.0",
    "@types/jasmine": "^2.5.54",
    "@types/jasminewd2": "^2.0.3",
    "@types/jest": "^22.0.1",
    "@types/node": "^9.3.0",
    "codelyzer": "4.4.4",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "electron": "^1.8.2",
    "electron-builder": "^19.56.0",
    "file-saver": "^1.3.3",
    "firebase-tools": "^7.13.1",
    "husky": "^0.14.3",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^22.0.4",
    "jest-preset-angular": "^5.0.0",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "moment": "^2.29.4",
    "protractor": "~5.2.2",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "2.7.2",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "jest-preset-angular",
    "roots": [
      "<rootDir>/src/"
    ],
    "setupFiles": [
      "<rootDir>/src/polyfills.ts"
    ],
    "testRegex": "/__tests__/.*test.ts$"
  }
}
